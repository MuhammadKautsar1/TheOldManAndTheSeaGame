<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="1080.0" prefWidth="1920.0" style="-fx-background-color: linear-gradient(to bottom, #e66465, #4a90e2);" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.SignUpController">
    <StackPane alignment="center" prefHeight="1080.0" prefWidth="1920.0">
        <AnchorPane maxHeight="500" maxWidth="400" style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 10, 0.5, 0, 0);">
            <Text layoutX="140" layoutY="50" style="-fx-font-size: 28px; -fx-font-weight: bold;" text="Sign Up" />
            
            <!-- Username Label -->
            <Text layoutX="40" layoutY="120" style="-fx-font-size: 16px;" text="Username:" />
            <TextField fx:id="usernameField" prefWidth="320" AnchorPane.leftAnchor="40" AnchorPane.topAnchor="150" />

            <!-- Password Label -->
            <Text layoutX="40" layoutY="210" style="-fx-font-size: 16px;" text="Password:" />
            <PasswordField fx:id="passwordField" prefWidth="320" AnchorPane.leftAnchor="40" AnchorPane.topAnchor="240" />
         <Button fx:id="loginButton" layoutX="42.0" layoutY="305.0" onAction="#handleButtonEvent" prefWidth="320" style="-fx-background-color: #4a90e2; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 10;" text="Sign Up" />
         <Button fx:id="signUpButton" layoutX="50.0" layoutY="380.0" onMouseClicked="#handleSignUpButtonEvent" prefWidth="320" style="-fx-background-color: transparent; -fx-text-fill: #4a90e2; -fx-font-size: 14px;" text="Back to Login" />

            <!-- Sign Up Button -->

            <!-- Back to Login Button -->
        </AnchorPane>
    </StackPane>
</AnchorPane>
