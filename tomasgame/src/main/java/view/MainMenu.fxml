<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="1080.0" prefWidth="1920.0" style="-fx-background-color: linear-gradient(to bottom, #145da0, #1e3c72);" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainMenuController">
    <VBox alignment="center" layoutX="710" layoutY="200" spacing="20">
        <Text style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-fill: white;" text="Main Menu" />
        
        <Button fx:id="startGameButton" prefWidth="300" style="-fx-background-color: #4a90e2; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 10;" text="Start Game" />
        <Button fx:id="bookButton" prefWidth="300" style="-fx-background-color: #4a90e2; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 10;" text="Book" />
        <Button fx:id="historyButton" prefWidth="300" style="-fx-background-color: #4a90e2; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 10;" text="History" />
        <Button fx:id="leaderboardButton" prefWidth="300" style="-fx-background-color: #4a90e2; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 10;" text="Leaderboard" />
        <Button fx:id="quitButton" prefWidth="300" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px;" text="Quit" />
    </VBox>
</AnchorPane>
